{
  "name": "ts-generators",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "A toolbox of typescript generators",
  "scripts": {
    "lint": "tslint --project tsconfig.json 'packages/*/src/**/*.ts'",
    "fix": "tslint --project tsconfig.json 'packages/*/src/**/*.ts' --fix",
    "install": "lerna bootstrap",
    "test": "lerna run test",
    "coveralls": "bash -c 'for f in packages/*/package.json; do pushd `dirname \"$f\"` && nyc report --reporter=text-lcov && popd; done' | coveralls",
    "clean": "lerna run clean"
  },
  "homepage": "https://github.com/watermarkchurch/ts-generators",
  "repository": {
    "type": "git",
    "url": "https://github.com/watermarkchurch/ts-generators.git"
  },
  "keywords": [],
  "author": "Gordon Burgett (gordon@gordonburgett.net)",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^11.11.3",
    "@types/yargs": "^12.0.9",
    "ava": "^1.2.0",
    "coveralls": "^3.0.2",
    "lerna": "^3.13.1",
    "nyc": "^13.1.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-eslint-rules-recommended": "^1.2.0",
    "typescript": "^3.2.4"
  },
  "ava": {
    "files": [
      "packages/*/src/**/*.test.ts"
    ],
    "cache": true,
    "failFast": true,
    "verbose": true,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "yargs": "^13.2.2"
  }
}
